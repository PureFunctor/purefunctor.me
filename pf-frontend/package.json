{
  "name": "purefunctor.me",
  "version": "1.0.0",
  "description": "My personal portfolio website written in PureScript and Haskell.",
  "main": "index.js",
  "scripts": {
    "css": "tailwindcss build ./css/tailwind.css -o ./css/style.css",
    "css:prod": "NODE_ENV=production yarn run css",
    "build:zephyr": "spago build -u '--codegen corefn' && zephyr -f Main.main",
    "parceldev": "parcel dev ./dev/index.html",
    "parcelprod": "parcel build ./prod/index.html --no-source-maps --public-url '/static' --out-dir static",
    "parcelprod:api": "parcel build ./dev/index.html --no-source-maps --public-url '/static' --out-dir static",
    "dev": "spago build && yarn run css && yarn run parceldev",
    "dev:api": "spago build && yarn run css && yarn run parcelprod:api && cabal run purefunctor-me",
    "prod": "spago build && yarn run css:prod && yarn run parcelprod",
    "prod:zephyr": "yarn run build:zephyr && yarn run css:prod && yarn run parcelprod",
    "purge": "rm -rf .spago dce-output output node_modules .cache .psci_modules",
    "test": "spago test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureFunctor/purefunctor.me.git"
  },
  "keywords": [
    "PureScript",
    "Haskell",
    "Halogen",
    "Yesod"
  ],
  "author": "PureFunctor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/PureFunctor/purefunctor.me/issues"
  },
  "homepage": "https://github.com/PureFunctor/purefunctor.me",
  "devDependencies": {
    "parcel": "^1.12.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "autoprefixer": "^10.1.0",
    "decimal.js": "^10.2.1",
    "postcss": "^8.2.1",
    "tailwindcss": "^2.0.2"
  }
}
