{
  "name": "purefunctor.me",
  "version": "2.0.0",
  "description": "My personal portfolio website written in PureScript.",
  "private": true,
  "scripts": {
    "_pre": "rm -rf dist && mkdir dist && cp public/* dist",
    "_build": "pnpm _pre && NODE_ENV=production node ./build.js",
    "_live": "pnpm _pre && WATCH=true node ./build.js & live-server dist",
    "build": "spago build -u '--codegen corefn' && pnpm _build",
    "live": "spago build && pnpm _live"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureFunctor/purefunctor.me.git"
  },
  "keywords": [
    "PureScript",
    "Halogen",
    "Web"
  ],
  "author": "PureFunctor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/PureFunctor/purefunctor.me/issues"
  },
  "homepage": "https://github.com/PureFunctor/purefunctor.me",
  "devDependencies": {
    "esbuild": "^0.12.14",
    "esbuild-plugin-purescript": "^1.0.2",
    "esbuild-sass-plugin": "^1.4.8",
    "live-server": "^1.2.1",
    "sass": "^1.35.1"
  }
}
