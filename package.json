{
  "name": "purefunctor.me",
  "version": "1.0.0",
  "description": "My personal portfolio website written in PureScript and Haskell.",
  "main": "index.js",
  "scripts": {
    "css": "tailwindcss build pf_app/css/tailwind.css -o pf_app/css/style.css",
    "css:prod": "NODE_ENV=production npm run css",
    "build:zephyr": "spago build -u '--codegen corefn' && zephyr -f Main.main",
    "parceldev": "parcel dev ./pf_app/dev/index.html",
    "parcelprod": "parcel build ./pf_app/prod/index.html --out-dir ./dist --no-source-maps",
    "dev": "spago build && npm run css && npm run parceldev",
    "dev:api": "spago build && npm run css && npm run parcelprod && cabal run purefunctor-me",
    "prod": "spago build && npm run css:min && npm run parcelprod",
    "prod:zephyr": "npm run build:zephyr && npm run css:prod && npm run parcelprod",
    "purge": "rm -rf .spago dce-output output node_modules .cache .psci_modules dist-newstyle",
    "test": "spago test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureFunctor/purefunctor.me.git"
  },
  "keywords": [
    "PureScript",
    "Haskell",
    "Halogen",
    "Yesod"
  ],
  "author": "PureFunctor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/PureFunctor/purefunctor.me/issues"
  },
  "homepage": "https://github.com/PureFunctor/purefunctor.me",
  "devDependencies": {
    "parcel": "^1.12.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "autoprefixer": "^10.1.0",
    "decimal.js": "^10.2.1",
    "postcss": "^8.2.1",
    "tailwindcss": "^2.0.2"
  }
}
