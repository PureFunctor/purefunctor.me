{
  "name": "purefunctor.me",
  "version": "2.0.0",
  "description": "My personal portfolio website written in PureScript.",
  "private": true,
  "scripts": {
    "css": "postcss build ./css/tailwind.css -o ./css/style.css",
    "css:build": "NODE_ENV=production TAILWIND_MODE=build yarn css",
    "ps:build": "spago build",
    "ps:bundle": "spago bundle-app -t ./prod/index.js",
    "ps:test": "spago test",
    "parcel:build": "parcel build ./prod/index.html --no-source-maps --dist-dir public",
    "dev": "parcel serve ./dev/index.html",
    "prod": "yarn css:build && yarn ps:bundle && yarn parcel:build",
    "purge": "rm -rf .spago output node_modules .cache .psci_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureFunctor/purefunctor.me.git"
  },
  "keywords": [
    "PureScript",
    "Halogen",
    "Web"
  ],
  "author": "PureFunctor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/PureFunctor/purefunctor.me/issues"
  },
  "homepage": "https://github.com/PureFunctor/purefunctor.me",
  "devDependencies": {
    "parcel": "^2.0.0-beta.2",
    "postcss-cli": "^8.3.1",
    "purescript": "^0.14.0",
    "spago": "^0.20.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "autoprefixer": "^10.2.5",
    "decimal.js": "^10.2.1",
    "postcss": "^8.2.9",
    "tailwindcss": "^2.1.1"
  }
}
