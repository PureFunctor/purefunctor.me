{
  "name": "purefunctor.me",
  "version": "2.0.0",
  "description": "My personal portfolio website written in PureScript.",
  "private": true,
  "scripts": {
    "css": "tailwindcss build ./css/tailwind.css -o ./css/style.css",
    "css:prod": "NODE_ENV=production yarn css",
    "build": "spago build",
    "build:zephyr": "spago build -u '--codegen corefn' && zephyr -f Main.main",
    "parceldev": "parcel dev ./dev/index.html",
    "parcelprod": "parcel build ./prod/index.html --no-source-maps --public-url '/static' --out-dir static",
    "parcelprod:api": "parcel build ./dev/index.html --no-source-maps --public-url '/static' --out-dir static",
    "dev": "spago build && yarn css && yarn parceldev",
    "dev:api": "spago build && yarn css && yarn parcelprod:api && cabal run purefunctor-me",
    "prod": "spago build && yarn css:prod && yarn parcelprod",
    "prod:zephyr": "yarn build:zephyr && yarn css:prod && yarn parcelprod",
    "purge": "rm -rf .spago dce-output output node_modules .cache .psci_modules",
    "test": "spago test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PureFunctor/purefunctor.me.git"
  },
  "keywords": [
    "PureScript",
    "Halogen",
    "Web"
  ],
  "author": "PureFunctor",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/PureFunctor/purefunctor.me/issues"
  },
  "homepage": "https://github.com/PureFunctor/purefunctor.me",
  "devDependencies": {
    "parcel": "^1.12.4",
    "purescript": "^0.14.0",
    "spago": "^0.19.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "autoprefixer": "^10.2.5",
    "decimal.js": "^10.2.1",
    "postcss": "^8.2.9",
    "tailwindcss": "^2.0.2"
  }
}
